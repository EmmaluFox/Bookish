@using Bookish.Models.User
@using Bookish.Models.Users
@using Dapper
@model Bookish.Models.User.UserModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
    DefaultTypeMap.MatchNamesWithUnderscores = true;
}

<h2>Users</h2>
@{
    <section class="user_list_container">
        <table class="user_table"><tr><th>ID</th><th>Profile Image</th><th>First Name</th><th>Last Name</th><th>Email Address</th></tr>
            @{
                UserServices getUserList = new UserServices();
                IEnumerable<UserServices.User> userList = getUserList.GetUsers();
                foreach (var user in userList)
                {
                    <tr><td>@user.Id</td>
                        <td><img src="@user.ImageUrl" alt="@user.FirstName + @user.LastName"/></td>
                        <td>@user.FirstName</td>
                        <td>@user.LastName</td>
                        <td>@user.Email</td></tr>
                }
                        
            }
        </table>
    </section>
}